server {
    listen 80;
    server_name mycalendarapp.eu www.mycalendarapp.eu;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name mycalendarapp.eu www.mycalendarapp.eu;

    ssl_certificate /etc/letsencrypt/live/mycalendarapp.eu/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mycalendarapp.eu/privkey.pem;

    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_set_header Host $host;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:9090;
        proxy_set_header Host $host;
    }
}
